<Page x:Class="Flowers.Views.Pages.ManagerPages.MainManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"  
      xmlns:l="clr-namespace:Flowers.Views.Pages.ManagerPages"
      d:DesignHeight="510" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Выберите пункт выдачи заказов" Style="{StaticResource MainTextBlockStyle}"/>
            <ComboBox Style="{StaticResource MainComboBoxStyle}" SelectedIndex="0" Height="35" DisplayMemberPath="OrderPickupPointAddress" x:Name="pppaCBox" Margin="0,5"/>
            <Button Style="{StaticResource MainButtonStyle}" Content="Выбрать" Click="GoOrderPageClick"/>
        </StackPanel>
    </Grid>
</Page>
